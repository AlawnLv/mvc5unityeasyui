@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width" />

    @Styles.Render("~/Content/themes/gray/css")
    @Styles.Render("~/Content/wdtree")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="easyui-layout">

    <div id="OverTimeLogin" class="easyui-dialog" data-options="closed:true,modal:true">
        <iframe width="726px" height="497px" frameborder="0" scrolling="no" id="iOverTimeLogin"></iframe>
    </div>

    <div data-options="region:'north',border:false,split:true" style="height: 60px">
        <div class="define-head">
            <div class="define-logo">
                <div id="LoginTopLine">System Manager</div>
                <div id="LoginBottomLine">MVC5+EF6.0+EasyUI</div>
            </div>
            <div class="define-account">
                <div id="LoginTopLine"><span>@ViewBag.UserName<b>&nbsp;欢迎您!</b></span></div>
                <div id="LoginBottomLine">
                    @using (Html.BeginForm("LogOut", "Account", "Post"))
                    {
                        @Html.AntiForgeryToken()
                        <a href="#" onclick="javascripts: $('form').submit();">安全退出</a>
                    }
                </div>
            </div>
        </div>
    </div>

    <div data-options="region:'south',border:true" style="height: 20px;">
        <div class="define-bottom">
            I'm foot!
        </div>
    </div>

    <div data-options="region:'west',split:true" title="菜单列表" style="width: 200px;background-color: #fff; overflow: auto; padding-top: 2px;">
        <div id="RightTree" style="background-color: #fff">
            <div class="panel-loading">加载中...</div>
        </div>
    </div>
    <div data-options="region:'center',border:false">
        <div id="mainTab" class="easyui-tabs" data-options="fit:true">
            <div title="我的桌面" data-options="closable:true" style="overflow: hidden; background-color: #fff">
                <iframe frameborder="0" scrolling="auto" src="@Url.Action("Index","SysSample")" style="width: 100%; height: 100%;"></iframe>
            </div>
        </div>
    </div>

    <div id="tab_menu" class="easyui-menu" style="width: 150px;">
        <div id="tab_menu-tabrefresh" data-options="iconCls:'icon-reload'">刷新</div>
        <div id="tab_menu-openFrame">在新的窗体打开</div>
        <div id="tab_menu-tabcloseall">关闭所有</div>
        <div id="tab_menu-tabcloseother">关闭其他标签</div>

        <div class="menu-sep"></div>

        <div id="tab_menu-tabcloseright">关闭右边</div>
        <div id="tab_menu-tabcloseleft">关闭左边</div>
        <div id="tab_menu-tabclose" data-options="iconCls:'icon-remove'">关闭</div>

        <div id="menu" class="easyui-menu" style="width: 150px;">

        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/easyui")
    @Scripts.Render("~/bundles/wdtree")
    <script src="~/Scripts/app/home.js"></script>
</body>
</html>